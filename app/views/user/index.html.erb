<h1>Listing users</h1>

<table>
  <tr>
    <th>name</th>
    <th>idm</th>
    <th>link to destroy</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.idm %></td>
    <td><%= link_to 'Destroy', user, method: :delete,
                                     data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
